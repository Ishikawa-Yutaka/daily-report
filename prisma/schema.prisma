generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id                String        @id @default(uuid())
  employeeNumber    String        @unique
  employeeName      String
  passwordHash      String
  role              UserRole      @default(USER)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  reports           DailyReport[]
  adminLogs         AdminLog[]

  @@map("users")
  @@index([employeeNumber])
  @@index([role])
}

model DailyReport {
  id                String     @id @default(uuid())
  date              DateTime   @default(now())
  quarterlyGoal     String     @db.Text
  improvements      String     @db.Text
  happyMoments      String     @db.Text
  futureTasks       String     @db.Text
  createdAt         DateTime   @default(now())
  updatedAt         DateTime   @updatedAt
  userId            String

  user              User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  activities        Activity[]

  @@map("daily_reports")
  @@index([userId])
}

model Activity {
  id                String      @id @default(uuid())
  reportId          String
  projectCategory   String
  content           String      @db.Text
  workingHours      Float
  issues            String      @db.Text
  order             Int         @default(0)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  report            DailyReport @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@map("activities")
  @@index([reportId])
}

enum AdminActionType {
  LOGIN
  LOGOUT
  VIEW_REPORT
  FILTER_REPORTS
  CHANGE_USER_ROLE
  VIEW_USERS
  VIEW_LOGS
}

model AdminLog {
  id                String          @id @default(uuid())
  adminId           String
  actionType        AdminActionType
  targetUserId      String?
  targetReportId    String?
  details           String?         @db.Text
  ipAddress         String?
  createdAt         DateTime        @default(now())

  admin             User            @relation(fields: [adminId], references: [id], onDelete: Cascade)

  @@map("admin_logs")
  @@index([adminId])
  @@index([actionType])
  @@index([createdAt])
}
